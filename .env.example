# JOBER AI Configuration
# Copy this file to .env and fill in your actual API keys

# LLM Provider API Keys (at least one required)
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Primary LLM Provider (gemini or openai)
PRIMARY_LLM_PROVIDER=gemini

# LLM Model Settings
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.7
GEMINI_TIMEOUT=30

OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=true
RELOAD=true

# Security Settings
SECRET_KEY=your-secure-secret-key-here

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=60

# Template Generation Settings
MAX_TEMPLATE_LENGTH=1000
MAX_VARIABLES_COUNT=10

# Template Formatting Settings
TEMPLATE_USE_SPECIAL_CHARACTERS=true
TEMPLATE_VARIABLE_PREFIX=â–¶
TEMPLATE_USE_EMOJI=false

# Logging
LOG_LEVEL=INFO